{
    "framework": "vite",
    "buildCommand": "npm run build:static",
    "outputDirectory": "dist",
    "cleanUrls": true,
    "trailingSlash": false,
    "redirects": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.bereschoon.nl"
                }
            ],
            "destination": "https://bereschoon.nl/:path*",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/winkel/product/:path*",
            "destination": "/index.html"
        },
        {
            "source": "/winkel/account/:path*",
            "destination": "/index.html"
        },
        {
            "source": "/winkel/checkout",
            "destination": "/index.html"
        },
        {
            "source": "/winkel/admin/:path*",
            "destination": "/index.html"
        },
        {
            "source": "/track/:path*",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}